<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".fragment.dashboardFragment.ShowTeams"
	android:orientation="vertical">

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:labelFor="@+id/team_name"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="10dip"
		android:text="@string/create_team_team_name"
		android:textSize="17sp" />

	<EditText
		android:id="@+id/team_name"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dip"
		android:layout_marginBottom="15dip"
		android:inputType="text"
		android:singleLine="true" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/imageView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"/>

		<AutoCompleteTextView
			android:id="@+id/choose_currency"
			android:clickable="false"
			android:focusable="false"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
			android:hint="@string/create_team_currency"/>
	</LinearLayout>

	<Button
		android:id="@+id/create_team"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/dashboard_create_team" />

</LinearLayout>