<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardview"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	card_view:cardCornerRadius="4dp"
	android:layout_marginBottom="4dp"
	android:elevation="10dp"
	app:cardBackgroundColor="@android:color/white"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/tools">

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/fee_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignStart="@id/date"
			android:layout_marginBottom="5dp"
			android:layout_marginTop="23dp"
			android:textSize="20sp" />

		<TextView
			android:id="@+id/fee_amount"
			android:text="123â‚¬"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/fee_name"
			android:layout_alignParentEnd="true"
			android:layout_marginEnd="14dp"
			android:paddingBottom="3dp"
			android:textSize="20sp" />

		<TextView
			android:id="@+id/date"
			android:text="123"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:drawablePadding="4dp"
			android:drawableStart="@drawable/iconfinder_calendar_115762"
			android:paddingTop="5dp"
			android:textSize="12sp" />

		<TextView
			android:id="@+id/isPaid"
			android:layout_alignEnd="@+id/fee_amount"
			android:layout_width="wrap_content"
			android:maxLines="1"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:layout_marginEnd="14dp"
			android:text="asd"
			android:layout_marginTop="5dp"/>

		<CheckBox
			android:id="@+id/select"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true" />
	</RelativeLayout>
</android.support.v7.widget.CardView>