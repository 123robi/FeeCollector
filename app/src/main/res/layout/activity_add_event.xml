<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activity.teamManagement.TeamActivity"
	android:orientation="vertical">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="10dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<RelativeLayout
				android:id="@+id/starts_picker"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="10dp">

				<TextView
					android:id="@+id/starts_at"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/add_event_starts"
					android:textStyle="bold"
					android:paddingBottom="2dp"/>

				<TextView
					android:id="@+id/start_date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_below="@+id/starts_at"
					android:layout_gravity="center"
					android:drawableLeft="@drawable/ic_event_black_24dp"
					android:drawablePadding="5dp"
					android:textSize="18sp" />

				<TextView
					android:id="@+id/start_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignEnd="@+id/starts_at"
					android:layout_below="@+id/starts_at"
					android:textSize="18sp"
					android:drawableLeft="@drawable/ic_access_time_black_24dp"
					android:drawablePadding="5dp" />
			</RelativeLayout>

			<View
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:background="#c0c0c0" />

			<RelativeLayout
				android:id="@+id/end_picker"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="10dp">

				<TextView
					android:id="@+id/ends_at"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/add_event_ends"
					android:textStyle="bold"
					android:paddingBottom="2dp"/>

				<TextView
					android:id="@+id/end_date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_below="@+id/ends_at"
					android:layout_gravity="center"
					android:drawablePadding="5dp"
					android:drawableLeft="@drawable/ic_event_black_24dp"
					android:textSize="18sp" />

				<TextView
					android:id="@+id/end_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignEnd="@+id/ends_at"
					android:layout_below="@+id/ends_at"
					android:drawablePadding="5dp"
					android:textSize="18sp"
					android:drawableLeft="@drawable/ic_access_time_black_24dp" />
			</RelativeLayout>
			<View
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:background="#c0c0c0" />

			<android.support.design.widget.TextInputLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<android.support.design.widget.TextInputEditText
					android:id="@+id/description"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/add_event_description"/>

			</android.support.design.widget.TextInputLayout>

		</LinearLayout>

		<AutoCompleteTextView
			android:id="@+id/choose_location"
			android:completionThreshold="1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/add_event_location"
			android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"/>

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/addNoteButton"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Save" />
	</LinearLayout>
	<ProgressBar
		android:id="@+id/pb_loading_indicator"
		android:layout_width="42dp"
		android:layout_height="42dp"
		android:layout_gravity="center_vertical|center_horizontal"
		android:visibility="invisible" />
</FrameLayout>
