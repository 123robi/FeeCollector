<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".fragment.registrationFragment.Registration_2nd_step">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/registration_name"
			android:paddingLeft="10dip"
			android:paddingRight="10dip"
			android:paddingTop="10dip"
			android:textSize="17sp"
			android:labelFor="@+id/name"/>

		<EditText
			android:id="@+id/name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dip"
			android:layout_marginBottom="15dip"
			android:singleLine="true"
			android:inputType="text"/>

		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/registration_password_label"
			android:paddingLeft="10dip"
			android:paddingRight="10dip"
			android:paddingTop="10dip"
			android:textSize="17sp"
			android:labelFor="@+id/password"/>

		<EditText android:id="@+id/password"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dip"
			android:layout_marginBottom="15dip"
			android:singleLine="true"
			android:inputType="textPassword"/>

		<Button android:id="@+id/createUser"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/registration_next"/>
	</LinearLayout>


</FrameLayout>