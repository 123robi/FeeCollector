<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".Activity.ChangePasswordActivity">
	<include android:id="@+id/back_action_bar" layout="@layout/toolbar"/>
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:labelFor="@+id/current_password"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="10dip"
		android:text="@string/current_password"
		android:textSize="17sp" />

	<EditText
		android:id="@+id/current_password"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dip"
		android:layout_marginBottom="15dip"
		android:inputType="textPassword"
		android:singleLine="true" />

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:labelFor="@+id/password_change"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="10dip"
		android:text="@string/password_label"
		android:textSize="17sp" />

	<EditText
		android:id="@+id/password_change"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dip"
		android:layout_marginBottom="15dip"
		android:inputType="textPassword"
		android:singleLine="true" />

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:labelFor="@+id/password_change_check"
		android:paddingLeft="10dip"
		android:paddingRight="10dip"
		android:paddingTop="10dip"
		android:text="@string/password_label_check"
		android:textSize="17sp" />

	<EditText
		android:id="@+id/password_change_check"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dip"
		android:layout_marginBottom="15dip"
		android:inputType="textPassword"
		android:singleLine="true" />

	<Button
		android:id="@+id/confirmButton"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/confirm" />

	<ProgressBar
		android:id="@+id/pb_loading_indicator"
		android:layout_width="42dp"
		android:layout_height="42dp"
		android:layout_gravity="center"
		android:visibility="invisible" />
</LinearLayout>