<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/swiperefresh"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<android.support.v7.widget.CardView
				android:id="@+id/next_event_card"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="10dp"
				app:cardCornerRadius="2dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="10dp">

						<TextView
							android:id="@+id/event_name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentStart="true"
							android:layout_centerVertical="true"
							android:textColor="@color/darkgrey"/>

						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentEnd="true"
							android:layout_centerVertical="true"
							android:src="@drawable/ic_dot_primary_12dp" />
					</RelativeLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:padding="10dp">
						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content">
							<TextView
								android:id="@+id/event_date"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_alignParentLeft="true"
								android:layout_alignParentTop="true"
								android:textStyle="bold"
								android:textColor="@color/black"
								android:textSize="22sp"
								android:text="@string/summary_loading" />

							<TextView
								android:id="@+id/event_time"
								android:visibility="gone"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_alignParentEnd="true"
								android:layout_alignParentTop="true"
								android:drawableLeft="@drawable/ic_access_time_black_16dp"
								android:textSize="22sp"
								android:textStyle="bold" />
						</RelativeLayout>
						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content">

							<TextView
								android:id="@+id/event_description"
								android:visibility="gone"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_alignParentTop="true"
								android:layout_toEndOf="@+id/event_location"
								android:paddingStart="5dp"
								android:drawableLeft="@drawable/ic_description_black_16dp"/>

							<TextView
								android:id="@+id/event_location"
								android:visibility="gone"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_alignParentStart="true"
								android:layout_alignParentTop="true"
								android:drawableLeft="@drawable/ic_location_on_black_24dp"/>
						</RelativeLayout>


					</LinearLayout>

					<fragment
						android:id="@+id/map"
						android:layout_marginTop="5dp"
						android:name="com.google.android.gms.maps.SupportMapFragment"
						android:layout_width="match_parent"
						android:layout_height="100dp" />
				</LinearLayout>
			</android.support.v7.widget.CardView>
			<android.support.v7.widget.CardView
				android:id="@+id/summary"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="10dp"
				app:cardCornerRadius="2dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="10dp"
					android:orientation="vertical">

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="10dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentStart="true"
							android:layout_centerVertical="true"
							android:text="@string/summary_numbers"
							android:textColor="@color/darkgrey"/>

						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentEnd="true"
							android:layout_centerVertical="true"
							android:src="@drawable/ic_dot_primary_12dp" />
					</RelativeLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingStart="10dp"
						android:orientation="horizontal">
						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="33"
							android:orientation="vertical">
							<TextView
								android:textStyle="bold"
								android:textSize="17sp"
								android:text="@string/summary_total"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
							<TextView
								android:id="@+id/total"
								android:layout_weight="33"
								android:textSize="17sp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
						</LinearLayout>
						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="33"
							android:gravity="center"
							android:orientation="vertical">
							<TextView
								android:text="@string/summary_notpaid"
								android:textColor="@color/floating_action_pure_red_pressed"
								android:textSize="17sp"
								android:textStyle="bold"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
							<TextView
								android:id="@+id/notpaid"
								android:layout_weight="33"
								android:textSize="17sp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
						</LinearLayout>
						<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="33"
							android:paddingEnd="10dp"
							android:gravity="end"
							android:orientation="vertical">
							<TextView
								android:text="@string/summary_paid"
								android:textColor="@color/floating_action_pure_green"
								android:textStyle="bold"
								android:textSize="17sp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
							<TextView
								android:id="@+id/paid"
								android:layout_weight="33"
								android:textSize="17sp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</android.support.v7.widget.CardView>
			<android.support.v7.widget.CardView
				android:id="@+id/most_violated_players"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:layout_margin="10dp"
				app:cardCornerRadius="2dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="10dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentStart="true"
							android:layout_centerVertical="true"
							android:text="@string/summary_graph_title"
							android:textColor="@color/darkgrey"/>

						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentEnd="true"
							android:layout_centerVertical="true"
							android:src="@drawable/ic_dot_primary_12dp" />
					</RelativeLayout>
					<com.github.mikephil.charting.charts.BarChart
						android:id="@+id/chart"
						android:padding="10dp"
						android:layout_width="match_parent"
						android:layout_height="200dp" />

				</LinearLayout>
			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:id="@+id/last_fined_players"
				android:visibility="gone"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:layout_margin="10dp"
				app:cardCornerRadius="2dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:padding="10dp">

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentStart="true"
							android:layout_centerVertical="true"
							android:text="@string/summary_last_fined_players"
							android:textColor="@color/darkgrey"/>

						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentEnd="true"
							android:layout_centerVertical="true"
							android:src="@drawable/ic_dot_primary_12dp" />
					</RelativeLayout>

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/first_fee"
						android:visibility="gone">

						<TextView
							android:id="@+id/summary_name1"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:textStyle="bold"
							android:textSize="20sp"/>

						<TextView
							android:id="@+id/summary_cost1"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:layout_alignParentEnd="true"
							android:layout_alignParentTop="true"
							android:textColor="@color/floating_action_pure_red_pressed"
							android:textSize="17sp"/>

						<TextView
							android:id="@+id/summary_fee1"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:layout_alignParentStart="true"
							android:layout_below="@+id/summary_name1"
							android:singleLine="true"
							android:textStyle="italic"
							android:drawableLeft="@drawable/ic_priority_high_red_16dp" />
					</RelativeLayout>

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/second_fee"
						android:visibility="gone">

						<TextView
							android:id="@+id/summary_name2"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:textStyle="bold"
							android:textSize="20sp"/>

						<TextView
							android:id="@+id/summary_cost2"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:layout_alignParentEnd="true"
							android:layout_alignParentTop="true"
							android:textColor="@color/floating_action_pure_red_pressed"
							android:textSize="17sp"/>

						<TextView
							android:id="@+id/summary_fee2"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:layout_alignParentStart="true"
							android:layout_below="@+id/summary_name2"
							android:singleLine="true"
							android:textStyle="italic"
							android:drawableLeft="@drawable/ic_priority_high_red_16dp" />
					</RelativeLayout>


					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/third_fee"
						android:visibility="gone">

						<TextView
							android:id="@+id/summary_name3"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:textStyle="bold"
							android:textSize="20sp" />

						<TextView
							android:id="@+id/summary_cost3"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:layout_alignParentEnd="true"
							android:layout_alignParentTop="true"
							android:textColor="@color/floating_action_pure_red_pressed"
							android:textSize="17sp"/>

						<TextView
							android:id="@+id/summary_fee3"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:layout_alignParentStart="true"
							android:layout_below="@+id/summary_name3"
							android:singleLine="true"
							android:textStyle="italic"
							android:drawableLeft="@drawable/ic_priority_high_red_16dp" />
					</RelativeLayout>
				</LinearLayout>
			</android.support.v7.widget.CardView>

		</LinearLayout>
	</ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>