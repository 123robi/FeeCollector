<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/swiperefresh"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<android.support.v7.widget.CardView
			android:id="@+id/next_event_card"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_margin="10dp"
			app:cardCornerRadius="2dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="10dp">

					<TextView
						android:id="@+id/event_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentStart="true"
						android:layout_centerVertical="true"
						android:textColor="@color/darkgrey"/>

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentEnd="true"
						android:layout_centerVertical="true"
						android:src="@drawable/ic_dot_primary_12dp" />
				</RelativeLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:padding="10dp">
					<TextView
						android:id="@+id/event_date"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textStyle="bold"
						android:textColor="@color/black"
						android:textSize="22sp"
						android:text="@string/summary_loading" />

					<TextView
						android:id="@+id/event_time"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textStyle="bold"
						android:textSize="22sp"/>

					<TextView
						android:id="@+id/event_description"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp" />

					<TextView
						android:id="@+id/event_location"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>

				</LinearLayout>

				<fragment
					android:id="@+id/map"
					android:layout_marginTop="10dp"
					android:name="com.google.android.gms.maps.SupportMapFragment"
					android:layout_width="match_parent"
					android:layout_height="100dp" />
			</LinearLayout>
		</android.support.v7.widget.CardView>
		<android.support.v7.widget.CardView
			android:id="@+id/summary"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_margin="10dp"
			app:cardCornerRadius="2dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingBottom="10dp"
				android:orientation="vertical">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="10dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentStart="true"
						android:layout_centerVertical="true"
						android:text="@string/summary_numbers"
						android:textColor="@color/darkgrey"/>

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentEnd="true"
						android:layout_centerVertical="true"
						android:src="@drawable/ic_dot_primary_12dp" />
				</RelativeLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingStart="10dp"
					android:orientation="horizontal">
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="33"
						android:orientation="vertical">
						<TextView
							android:textStyle="bold"
							android:textSize="17sp"
							android:text="@string/summary_total"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
						<TextView
							android:id="@+id/total"
							android:layout_weight="33"
							android:textSize="17sp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					</LinearLayout>
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="33"
						android:gravity="center"
						android:orientation="vertical">
						<TextView
							android:text="@string/summary_notpaid"
							android:textColor="@color/floating_action_pure_red_pressed"
							android:textSize="17sp"
							android:textStyle="bold"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
						<TextView
							android:id="@+id/notpaid"
							android:layout_weight="33"
							android:textSize="17sp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					</LinearLayout>
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="33"
						android:paddingEnd="10dp"
						android:gravity="end"
						android:orientation="vertical">
						<TextView
							android:text="@string/summary_paid"
							android:textColor="@color/floating_action_pure_green"
							android:textStyle="bold"
							android:textSize="17sp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
						<TextView
							android:id="@+id/paid"
							android:layout_weight="33"
							android:textSize="17sp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</android.support.v7.widget.CardView>
		<android.support.v7.widget.CardView
			android:id="@+id/most_violated_players"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center"
			android:layout_margin="10dp"
			app:cardCornerRadius="2dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="10dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentStart="true"
						android:layout_centerVertical="true"
						android:text="@string/summary_graph_title"
						android:textColor="@color/darkgrey"/>

					<ImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentEnd="true"
						android:layout_centerVertical="true"
						android:src="@drawable/ic_dot_primary_12dp" />
				</RelativeLayout>
				<com.github.mikephil.charting.charts.BarChart
					android:id="@+id/chart"
					android:padding="10dp"
					android:layout_width="match_parent"
					android:layout_height="match_parent" />

			</LinearLayout>
		</android.support.v7.widget.CardView>

	</LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>